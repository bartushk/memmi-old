doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/css/site.css')
        link(rel='stylesheet', href='/css/man.css')
        link(rel='stylesheet', href='/css/animation.css')

        script(src='/js/lib/require.js')
        script(src='/js/require-config.js')
        block additional-header-imports

    body
        header
            include ./templates/login-template.jade
            div.container
                img(id='logo', src='/images/logo.png')
                div#loginContainer(data-bind="template: {name: 'standard-login', data: LoginModel}")
                nav
                    ul.list-divide-pipe
                        each value, index in pages
                            - var item_class = index > 0 ? "piped" : "";
                            - item_class += index == selected_index ? " current" : "";
                            li(class= item_class)
                                a(href= value.link)= value.title

    div#bodyContentContainer
        block content
    div#footer
    footer
        block footer
